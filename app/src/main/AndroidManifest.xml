<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmlozdmr.trainme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Welcome" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".Profile" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Exercises" />
        <activity android:name=".Diet" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".GetExercises" />
        <activity android:name=".DisplayFoods" />
        <application
            android:name="com.dmlozdmr.trainme.app.AppController"/>
        <activity
            android:name=".DisplayExercises"
            android:label="@string/title_activity_display_exercises"
            android:theme="@style/MyMaterialTheme"></activity>

    </application>

</manifest>
